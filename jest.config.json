{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/tests"],
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "tsconfig": "tsconfig.test.json"
      }
    ]
  },
  "globals": {
        "ts-jest": {
            "useESM": true
        }
    },
   "moduleNameMapper": {
        "(.+)\\.js": "$1"
    },
  "extensionsToTreatAsEsm": [".ts"]
}